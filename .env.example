# OpenAI Configuration (prioritized if OPENAI_API_KEY is set)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL_NAME=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# LM Studio Configuration (fallback if OpenAI is not configured)
# LM Studio Base URL (default: http://localhost:1234/v1)
LM_STUDIO_BASE_URL=http://localhost:1234/v1

# LM Studio API Key (LM Studio doesn't require a real API key, but this is needed for compatibility)
LM_STUDIO_API_KEY=lm-studio

# Default model name (will be overridden by the model loaded in LM Studio)
DEFAULT_MODEL_NAME=qwen/qwen3-1.7b

# Optional: Custom system prompt
# SYSTEM_PROMPT="You are a helpful AI assistant."

# Optional: Temperature setting (0.0 to 1.0)
TEMPERATURE=0.1

# Optional: Timeout in seconds
TIMEOUT=300
